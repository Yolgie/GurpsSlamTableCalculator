root = true

# All files
[*]
charset = utf-8
end_of_line = lf
max_line_length = 180
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{js,ts,vue,json,yml,yaml}]
indent_size = 2

# Markdown
[*.md]
max_line_length = off
trim_trailing_whitespace = false
